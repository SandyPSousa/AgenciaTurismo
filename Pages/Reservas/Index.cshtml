@page
@model AgenciaTurismo.Pages.Reservas.IndexModel

@{
	ViewData["Title"] = "Lista de Reservas";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a asp-page="Create" class="btn btn-success">Nova Reserva</a>
</p>
<table class="table table-striped">
	<thead>
	<tr>
		<th>@Html.DisplayNameFor(model => model.Reserva[0].Cliente)</th>
		<th>@Html.DisplayNameFor(model => model.Reserva[0].PacoteTuristico)</th>
		<th>@Html.DisplayNameFor(model => model.Reserva[0].DataReserva)</th>
		<th>@Html.DisplayNameFor(model => model.Reserva[0].ValorTotal)</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model.Reserva) {
		<tr>
			<td>@Html.DisplayFor(modelItem => item.Cliente.Nome)</td>
			<td>@Html.DisplayFor(modelItem => item.PacoteTuristico.Titulo)</td>
			<td>@item.DataReserva.ToLocalTime().ToString("g")</td>
			<td>@item.ValorTotal.ToString("C")</td>
			<td>
				<a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Cancelar</a>
			</td>
		</tr>
	}
	</tbody>
</table>