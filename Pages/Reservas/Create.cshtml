@page
@model AgenciaTurismo.Pages.Reservas.CreateModel

@{
    ViewData["Title"] = "Nova Reserva";
}

<h1>@ViewData["Title"]</h1>
<h4>Realizar Nova Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.ClienteId" class="control-label"></label>
                <select asp-for="Reserva.ClienteId" class="form-control" asp-items="@(ViewData["Clientes"] as SelectList)">
                    <option value="">-- Selecione um Cliente --</option>
                </select>
                <span asp-validation-for="Reserva.ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.PacoteTuristicoId" class="control-label"></label>
                <select asp-for="Reserva.PacoteTuristicoId" class="form-control" asp-items="@(ViewData["Pacotes"] as SelectList)">
                    <option value="">-- Selecione um Pacote --</option>
                </select>
                <span asp-validation-for="Reserva.PacoteTuristicoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.NumeroPessoas" class="control-label"></label>
                <input asp-for="Reserva.NumeroPessoas" class="form-control" type="number" value="1" />
                <span asp-validation-for="Reserva.NumeroPessoas" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar Reserva" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}