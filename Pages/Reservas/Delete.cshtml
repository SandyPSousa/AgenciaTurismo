@page
@model AgenciaTurismo.Pages.Reservas.DeleteModel

@{
	ViewData["Title"] = "Cancelar Reserva";
}

<h1>@ViewData["Title"]</h1>

<h3>Você tem certeza que deseja cancelar esta reserva?</h3>
<div>
	<h4>Reserva</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Reserva.Cliente)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Reserva.Cliente.Nome)</dd>

		<dt class="col-sm-2">@Html.DisplayNameFor(model => model.Reserva.PacoteTuristico)</dt>
		<dd class="col-sm-10">@Html.DisplayFor(model => model.Reserva.PacoteTuristico.Titulo)</dd>
	</dl>
    
	<form method="post">
		<input type="hidden" asp-for="Reserva.Id" />
		<input type="submit" value="Confirmar Cancelamento" class="btn btn-danger" /> |
		<a asp-page="./Index">Voltar para Lista</a>
	</form>
</div>