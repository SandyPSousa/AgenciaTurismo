@page
@model AgenciaTurismo.Pages.Pacotes.DeleteModel

@{
	ViewData["Title"] = "Excluir Pacote";
}

<h1>@ViewData["Title"]</h1>

<h3>Você tem certeza que deseja excluir este pacote?</h3>
<div>
	<h4>Pacote Turístico</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.PacoteTuristico.Titulo)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PacoteTuristico.Titulo)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.PacoteTuristico.DataInicio)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PacoteTuristico.DataInicio)
		</dd>
	</dl>
    
	<form method="post">
		<input type="hidden" asp-for="PacoteTuristico.Id" />
		<input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> |
		<a asp-page="./Index" class="btn btn-secondary">Voltar para Lista</a>
	</form>
</div>