@page
@model AgenciaTurismo.Pages.Clientes.IndexModel

@{
	ViewData["Title"] = "Lista de Clientes"; 
}

<h1>Clientes</h1>

<p>
    <a asp-page="Create">Cadastrar novo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente[0].DeletedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cliente) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeletedAt)
            </td>
	            <td>
		            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a> |
		            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Detalhes</a> |
		            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
	            </td>
        </tr>
}
    </tbody>
</table>
