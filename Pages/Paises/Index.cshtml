@page
@model AgenciaTurismo.Pages.Paises.IndexModel

@{
	ViewData["Title"] = "Lista de Países";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a asp-page="Create" class="btn btn-success">Cadastrar Novo País</a>
</p>
<table class="table table-striped">
	<thead>
	<tr>
		<th>@Html.DisplayNameFor(model => model.PaisDestino[0].Nome)</th>
		<th>@Html.DisplayNameFor(model => model.PaisDestino[0].CodigoISO)</th>
		<th>@Html.DisplayNameFor(model => model.PaisDestino[0].Continente)</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var item in Model.PaisDestino) {
		<tr>
			<td>@Html.DisplayFor(modelItem => item.Nome)</td>
			<td>@Html.DisplayFor(modelItem => item.CodigoISO)</td>
			<td>@Html.DisplayFor(modelItem => item.Continente)</td>
			<td>
				<a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a> |
				<a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Detalhes</a> |
				<a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
			</td>
		</tr>
	}
	</tbody>
</table>