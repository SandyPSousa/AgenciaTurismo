@page
@model AgenciaTurismo.Pages.Paises.CreateModel

@{
	ViewData["Title"] = "Cadastrar País";
}

<h1>@ViewData["Title"]</h1>
<h4>Novo País de Destino</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group mb-2">
				<label asp-for="PaisDestino.Nome" class="control-label"></label>
				<input asp-for="PaisDestino.Nome" class="form-control" />
				<span asp-validation-for="PaisDestino.Nome" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="PaisDestino.CodigoISO" class="control-label"></label>
				<input asp-for="PaisDestino.CodigoISO" class="form-control" />
				<span asp-validation-for="PaisDestino.CodigoISO" class="text-danger"></span>
			</div>
			<div class="form-group mb-2">
				<label asp-for="PaisDestino.Continente" class="control-label"></label>
				<input asp-for="PaisDestino.Continente" class="form-control" />
				<span asp-validation-for="PaisDestino.Continente" class="text-danger"></span>
			</div>
			<div class="form-group mt-3">
				<input type="submit" value="Salvar" class="btn btn-primary" />
				<a asp-page="Index" class="btn btn-secondary">Voltar para Lista</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}