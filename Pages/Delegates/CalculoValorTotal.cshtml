@page
@model AgenciaTurismo.Pages.Delegates.CalculoValorTotalModel
@{
    ViewData["Title"] = "Cálculo de Valor Total";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h4>Calcular Valor Total da Hospedagem</h4>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="NumeroDiarias" class="control-label">Número de Diárias</label>
                        <input asp-for="NumeroDiarias" class="form-control" type="number" min="1" />
                        <span asp-validation-for="NumeroDiarias" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ValorDiaria" class="control-label">Valor da Diária (R$)</label>
                        <input asp-for="ValorDiaria" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="ValorDiaria" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Calcular Total</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        @if (Model.ValorTotal.HasValue)
        {
            <div class="card bg-info text-white">
                <div class="card-header">
                    <h4>Resultado do Cálculo</h4>
                </div>
                <div class="card-body">
                    <p class="h5">Número de Diárias: <strong>@Model.NumeroDiarias</strong></p>
                    <p class="h5">Valor por Diária: <strong>R$ @Model.ValorDiaria.ToString("F2")</strong></p>
                    <hr />
                    <p class="h3">Valor Total: <strong>R$ @Model.ValorTotal.Value.ToString("F2")</strong></p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}