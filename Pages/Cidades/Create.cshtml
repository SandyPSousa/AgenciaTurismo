@page
@model AgenciaTurismo.Pages.Cidades.CreateModel

@{
    ViewData["Title"] = "Cadastrar Cidade";
}

<h1>@ViewData["Title"]</h1>
<h4>Nova Cidade de Destino</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="CidadeDestino.Nome" class="control-label"></label>
                <input asp-for="CidadeDestino.Nome" class="form-control" />
                <span asp-validation-for="CidadeDestino.Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="CidadeDestino.Estado" class="control-label"></label>
                <input asp-for="CidadeDestino.Estado" class="form-control" />
                <span asp-validation-for="CidadeDestino.Estado" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="CidadeDestino.Descricao" class="control-label"></label>
                <textarea asp-for="CidadeDestino.Descricao" class="form-control"></textarea>
                <span asp-validation-for="CidadeDestino.Descricao" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="CidadeDestino.PaisDestinoId" class="control-label"></label>
                <select asp-for="CidadeDestino.PaisDestinoId" class="form-control" asp-items="@(ViewData["Paises"] as SelectList)">
                    <option value="">-- Selecione um País --</option>
                </select>
                <span asp-validation-for="CidadeDestino.PaisDestinoId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Voltar para Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}